<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>All Players</title>
    <script>
        function CreateTableCode(result, headers) {
            var str = '<table border=1>';
            str += '<tr>';
            for (var i = 0; i < headers.length; i++) {
                str += '<th>'+headers[i]+'</th>';
            }
            str += '</tr>';
            for (var i = 0; i < result.length; i++) {
                str += '<tr>';
                for (var j = 0; j < result[i].length; j++) {
                    str += '<td class="ui-helper-center">' + result[i][j] + '</td>';
                }
                str += '</tr>';
            }
            str += '</table>';
            return str;
        }

    </script>
    <style type="text/css">
        #table
        {
            height: 300px;
        }
        
        .ui-helper-center
        {
            text-align: center;
        }
    </style>
</head>
<body>
    All Players' Stats:
    <br />
    <p id="table"></p>
    <script>
        var data = ["?PlayersStatTable?"];
        //data = [["a", 3, 0, 0], ["b", 1, 1, 1], ["c", 0, 2, 1]];

        if (data.length > 0) {
            document.getElementById("table").innerHTML = CreateTableCode(data,["Player","Won","Lost","Tied"]);
        }
        else
            document.write("Sorry, No Data Available.");

    </script>
</body>
</html>